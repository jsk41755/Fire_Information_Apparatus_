<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".manual_Activity_1">

    <TextView
        android:id="@+id/Factors_All"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="오작동(비화재보) 발생대상"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#EDAA7D"
        android:layout_marginBottom="5dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderline"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="광전식\n연기감지기" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/optical_smoke_detector"
                android:padding="10dp"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="∙드레스룸(샤워실 인근)\n∙음식조리, 흡연장소 인근\n∙에어컨 인근(밀접 배치)\n∙먼지 유발 장소 "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:padding="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderline"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="차동식\n열감지기" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/rate_of_rise_detector"
                android:padding="10dp"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="∙발코니, 실외기실\n∙에어컨 인근(에어컨 작동중현관문 또는 창문 개방)"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:padding="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderline"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="정온식\n열감지기" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/fixed_temperature_detector"
                android:padding="10dp"
                android:gravity="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="∙ 실외기실(여름철 고온)"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    </LinearLayout>

    </ScrollView>

        <ImageButton
            android:id="@+id/next_page"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="right|bottom"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_navigate_next_24" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/borderline">

        <Button
            android:id="@+id/finish_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EDAA7D"
            android:gravity="center"
            android:onClick="mOnClose"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
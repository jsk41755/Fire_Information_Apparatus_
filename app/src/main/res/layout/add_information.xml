<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#6666FF"
            android:gravity="center"
            android:text="추가"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대상물 명 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/Object_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="필수작성"
                android:padding="10dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지번 주소 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>


            <EditText
            android:id="@+id/Old_Address"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter value"
            android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도로명 주소 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/New_Address"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:hint="enter value"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관할센터 : "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:padding="10dp"/>

            <Spinner
                android:id="@+id/Jurisdiction_Center"
                android:spinnerMode="dialog"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소별 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <Spinner
                android:id="@+id/et_value5"
                android:spinnerMode="dialog"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고시각 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>


        <EditText
            android:id="@+id/Reporting_Time"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="12"
            android:hint="ex)202108301220"
            android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고자전화 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/Declaration_Number_Phone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ex)01012345678 ('-'없이 11숫자)"
                android:textSize="15dp"
                android:maxLength="11"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

        <EditText
            android:id="@+id/Object_Manager"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일반전화 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

        <EditText
            android:id="@+id/Manager_General_Telephone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex)0101234567 ('-'없이 10숫자)"
            android:textSize="15dp"
            android:maxLength="10"
            android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대전화 : "
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

        <EditText
            android:id="@+id/Manager_Cell_Phone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex)01012345678 ('-'없이 11숫자)"
            android:maxLength="11"
            android:textSize="15dp"
            android:padding="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginStart="10dp">


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사례원인 : "
            android:textColor="@color/black"
            android:textSize="18dp"
            android:padding="10dp"/>

        <Spinner
            android:id="@+id/et_value11"
            android:spinnerMode="dialog"
            android:layout_width="110dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/et_value12"
            android:spinnerMode="dialog"
            android:layout_width="130dp"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_rounded_corner_rectangle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조치 내용 :"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black"/>

            <EditText
            android:id="@+id/Reported_Content"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:hint="내용을 적어주세요."
            android:background="@null"
            android:padding="12dp"
            android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="80dp"
            android:backgroundTint="#6666FF"
            android:gravity="center"
            android:onClick="mOnClose"
            android:text="추가"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#6666FF"
            android:gravity="center"
            android:onClick="mOnClose"
            android:text="닫기"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>